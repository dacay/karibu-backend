{
  "name": "karibu-backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:qmd": "concurrently \"pnpm dev\" \"chokidar 'src/**/*' -c 'qmd embed'\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.8",
    "hono-pino": "^0.10.3",
    "pino": "^10.3.0",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.16.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}