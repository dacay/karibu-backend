# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/karibu

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3001,https://app.example.com,https://admin.example.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
JWT_AUDIENCE=https://test.karibu.ai
JWT_EXPIRATION=30d
JWT_ALGORITHM=HS256


# Notification Configuration (comma-separated channels: sms)
NOTIFICATION_CHANNELS=sms

# Twilio Configuration (required when NOTIFICATION_CHANNELS includes "sms")
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AI / LLM
OPENAI_API_KEY=sk-your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# AWS S3 (Document Storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-s3-bucket-name

# ChromaDB (Vector Database for DNA Calculation)
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION_NAME=karibu-documents
